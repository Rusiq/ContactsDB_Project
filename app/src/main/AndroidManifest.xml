<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ruslan.contactsdb_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activities.ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.AddActivity"
            android:configChanges="orientation|screenSize"
            android:label="ActivityTwo"
            android:windowSoftInputMode="stateUnspecified">
        </activity>
        <activity android:name=".ui.activities.DetailActivity"
                  android:configChanges="orientation|screenSize"
            android:label="Ð¡ontact details">
        </activity>
        <activity android:name=".ui.activities.EditActivity"
                  android:label="Edit contact"
            android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>